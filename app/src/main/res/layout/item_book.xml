<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <!-- Declare the book variable to bind data -->
        <variable
            name="book"
            type="com.example.task_recyclerview.Book" /> <!-- Replace with your actual Book class path -->
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="80dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            app:srcCompat="@{book.image}" /> <!-- Binding image resource -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="8dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{book.title}"
                style="@style/MyTextStyle"
                android:textAppearance="?attr/textAppearanceSubtitle1" />
            <!-- Button next to Title -->
            <Button
                android:id="@+id/btn_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/orange"
                android:layout_marginStart="8dp"
                android:text="Action"
                android:backgroundTint="?attr/colorPrimary"
                android:textColor="@color/black" />
            <TextView
                android:id="@+id/tv_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{book.author}"
                style="@style/MyTextStyle"
                android:textAppearance="?attr/textAppearanceBody2" />

            <RatingBar
                android:id="@+id/tv_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="0.5"
                android:rating="@{book.rating}" />
        </LinearLayout>
    </LinearLayout>
</layout>
